<div class="header-show-flex">
  <div class="home-header">
    <h1 class="program-title"><%= @city.name %></h1>
  </div>
</div>
<div>
  <div class="container">
    <div class="cat-title">
        <h1>Informations utiles</h1>
    </div>
    <div class="city-board">
      <div class="rubrique-show">
          <h3>Administratif</h3>
        <p><strong>Departement: </strong><%= @city.departement %></p>
        <p><strong>Région: </strong><%= @city.region %></p>
        <p><strong>Canton: </strong><%= @city.canton %></p>
        <p><strong>Intercommunalité: </strong><%= @city.intercommunalite %></p>
        <p><strong>Maire actuel: </strong><%= @city.current_maire %></p>
        <p><strong>Code Postal: </strong><%= @city.zip_code %></p>
        <p><strong>Code Commune: </strong><%= @city.code_commune %></p>
          <h3>Démographie</h3>
        <p><strong>Gentilé: </strong><%= @city.gentile %></p>
        <p><strong>Population: </strong><%= @city.population %></p>
        <p><strong>Densité: </strong><%= @city.density %></p>
          <h3>Géographie</h3>
        <p><strong>Latitude: </strong><%= @city.latitude %></p>
        <p><strong>Longitude: </strong><%= @city.longitude %></p>
        <p><strong>Altitude: </strong><%= @city.height %></p>
        <p><strong>Superficie: </strong><%= @city.superficy %></p>
      </div>
      <div
      id="map"
      data-markers="<%= @markers.to_json %>"
      data-coordinates="<%= @coordinates.to_json%>">
      </div>
    </div>
    <div class="cat-title">
      <h1>Diaporama</h1>
    </div>
    <div class="photo-city">
      <% @photos.each do |picture| %>
        <div class="card "
          style="background-image: url('<%= cl_image_path picture.photo, height: 300, width: 400, crop: :fill %>')">
        <%= link_to "", city_photo_path(@city.id, picture.id), method: :delete, class: "fa fa-trash del-pos-card"  %>
      </div>
      <% end %>
    </div>
    <br>
    <div>
      <%= simple_form_for [@city, @photo] do |f| %>
      <%= f.file_field :photo %>
      <%= f.submit "Ajouter"%>
      <% end %>
    </div>
  <br>
  <br>
    <div class="city-button">
      <%= link_to 'Modifier ma ville', edit_city_path(@city), class: "btn-restart btn-orange" %>
      <%= link_to 'Supprimer ma ville', city_path(@city), method: :delete, class: "btn-restart btn-red" %>
    </div>
  <br>
  <br>
</div>

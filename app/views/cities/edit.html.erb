<div class="home-header">
  <h1 class="program-title">Modifier <%= @city.name %></h1>
</div>
<div>
  <%= link_to 'Annuler', city_path(@city), class:"btn-add" %>
</div>
<div class="container">
  <div class="grid">
    <div class="f-new">
      <ul class="new-form">
        <%= simple_form_for @city do |f| %>
          <%= f.input :name%>
          <%= f.input :zip_code %>
          <%= f.input :code_commune %>
          <%= f.input :departement %>
          <%= f.input :canton %>
          <%= f.input :region %>
          <%= f.input :intercommunalite %>
          <%= f.input :population %>
          <%= f.input :density %>
          <%= f.input :superficy %>
          <%= f.input :height %>
          <%= f.input :current_maire %>
          <%= f.input :website %>
          <%= f.input :gentile %>
          <%= f.input :debt %>
          <%= f.input :coordinates %>
          <%= f.submit 'Modifier'%>
          <!-- [...] -->
        <% end %>
      </ul>
    </div>
  </div>
</div>

</div>
<div class="container">
  <ul id="question"><%= @question.question%>
    <% @answers.each do |answer| %>
    <li>
      <%= link_to answer.answer, get_program_interview_path(answers_to_question: @question.answers_to_questions.find_by(answer_id: answer), question: @question), method: :patch, class: 'answer', remote: true%>
    </li>
    <% end %>
  </ul>
  <br>
  <br>
     <div class="grid">
      <div class="f-new">

<div class="home-header">
  <h1 class="program-title">Ajouter un programme</h1>
</div>
<div>
  <%= link_to 'Annuler', programs_path, class:"btn-add" %>
</div>
<div class="container">
   <div class="grid">
    <div class="f-new">
      <ul class="new-form">
        <%= simple_form_for(@program) do |f| %>
          <!-- [...] -->
          <%= f.input :title, :label => "Titre"%>
          <%= f.input :category_id, :label => "Catégorie",collection: @categories.collect{|category| [category.name, category.id]} %>
          <%= f.input :content, :label => "Contenu", as: :text, input_html: {rows: 20} %>
          <%= f.submit 'Créer'%>
          <!-- [...] -->
        <% end %>
      </ul>
    </div>
  </div>

</div>
